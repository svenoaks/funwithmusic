<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res/com.smp.funwithmusic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_shadow"
    android:paddingBottom="0dp"
    android:paddingLeft="4dp"
    android:paddingRight="0dp"
    android:paddingTop="3dp"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/card_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:orientation="vertical" >

        <com.afollestad.silk.views.text.SilkTextView
            android:id="@+id/progress_text"
            style="@style/card_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="4dp"
            android:text="@string/loading_flow" />

        <com.smp.funwithmusic.views.ProgressWheel
            android:id="@+id/pw_spinner"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            ProgressWheel:barColor="#99cc00"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barWidth="4dp"
            ProgressWheel:rimColor="@color/holo_orange"
            ProgressWheel:rimWidth="2dp"
            ProgressWheel:text=""
            ProgressWheel:textColor="#222"
            ProgressWheel:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

